<%- include ('partials/header.ejs') %>
<body>
        <%- include('partials/navbar.ejs') %> 
    
        <div class="container"> 
            <hr>
            <h1> Questions </h1>
            <a href="/questions" class="btn btn-primary">Add question</a>
            <hr>
                <% questions.forEach(question => { %>
                    <br>
                    <div class="card">
                        <div class="card-body">
                            <h4><%= question.title %></h4>
                        </div>
                        <div class="card-footer">
                           <a href="/question/<%= question.id %> "><button class="btn btn-primary">Reply</button> </a>
                    </div>                  
                <% }); %>
        </div>
</body>
<%- include ('partials/footer.ejs') %>  